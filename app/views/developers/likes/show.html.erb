<%= turbo_frame_tag "developers_prompt_response_#{params[:prompt_response_id]}_like" do %>
  <% unless @like.persisted? %>
    <%= form_with model: @like, url: like_path, class: "flex-0 w-full flex justify-end py-4" do |f| %>
      <%= f.hidden_field :prompt_response_id %>
      <%= f.button type: :submit, class: "group rounded-full p-1.5 hover:bg-red-100 hover:border-transparent" do %>
        <%= inline_svg_tag "icons/outline/heart", class: "h-8 w-8 text-gray-300 group-hover:text-red-600 group-hover:fill-red-600" %>
      <% end %>
    <% end %>
  <% else %>
    <%= form_with model: @like, url: like_path, method: :delete, class: "flex-0 w-full flex justify-end py-4" do |f| %>
      <%= f.hidden_field :prompt_response_id %>
      <%= f.button type: :submit, class: "group rounded-full p-1.5 bg-red-100 hover:bg-transparent" do %>
        <%= inline_svg_tag "icons/outline/heart", class: "h-8 w-8 text-red-600 fill-red-600 group-hover:fill-transparent group-hover:text-gray-300" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
